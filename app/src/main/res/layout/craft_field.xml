<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/arrangeField"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="field"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

    <ru.bogdanov.guselnik.custom.CraftView
        android:id="@+id/forest"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|top"
        android:background="#1FFF46"
        app:type="forest">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Лес"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </ru.bogdanov.guselnik.custom.CraftView>

    <ru.bogdanov.guselnik.custom.MovableCraftView
        android:id="@+id/axe"
        android:layout_width="@dimen/instrument"
        android:layout_height="@dimen/instrument"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:background="#ECECEC"
        app:returnable="true"
        app:type="axe">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/insrument_axe" />
    </ru.bogdanov.guselnik.custom.MovableCraftView>

    <ru.bogdanov.guselnik.custom.MovableCraftView
        android:id="@+id/knife"
        android:layout_width="@dimen/instrument"
        android:layout_height="@dimen/instrument"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:background="#ECECEC"
        app:returnable="true"
        app:type="knife">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/instrument_knife" />
    </ru.bogdanov.guselnik.custom.MovableCraftView>

    <ru.bogdanov.guselnik.custom.MovableCraftView
        android:id="@+id/chisel"
        android:layout_width="@dimen/instrument"
        android:layout_height="@dimen/instrument"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:background="#ECECEC"
        app:returnable="true"
        app:type="chisel">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/instrument_chisel" />
    </ru.bogdanov.guselnik.custom.MovableCraftView>

    <ru.bogdanov.guselnik.custom.CraftView
        android:id="@+id/trash"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FFBCBC"
        app:type="trash">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Мусорка"
            android:textColor="@android:color/white" />
    </ru.bogdanov.guselnik.custom.CraftView>
</FrameLayout>
